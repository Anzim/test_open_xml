<Window x:Class="OpenOfficeWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenOfficeWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="SelectButton" Content="Select File" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.042,0.223" Click="button_Click"/>
        <Button x:Name="ChangeButton" Content="Change File" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Width="75" IsEnabled="False" Click="ChangeButton_Click"/>
        <TextBlock x:Name="SelectedFile" HorizontalAlignment="Left" Margin="90,12,0,0" TextWrapping="Wrap" Text="No file selected" VerticalAlignment="Top" Width="418"/>
        <TextBox x:Name="MessagesTextBox" HorizontalAlignment="Left" Height="248" Margin="10,64,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="498"/>

    </Grid>
</Window>
